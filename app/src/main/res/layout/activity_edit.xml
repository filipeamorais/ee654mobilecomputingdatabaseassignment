<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android=
    "http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.databaseassignment.EditActivity">
    <TextView
        android:id="@+id/texViewValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"/>
    <EditText
        android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/texViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"/>
    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/texViewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"/>
    <EditText
        android:id="@+id/editTextAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/texViewPublisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"/>
    <EditText
        android:id="@+id/editTextPublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/texViewYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id"/>
    <EditText
        android:id="@+id/editTextYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="INSERT"
        android:id="@+id/add"
        android:onClick="addRecord"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE"
        android:id="@+id/update"
        android:onClick="updateRecord"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:id="@+id/goBack"
        android:onClick="goBack"/>
</LinearLayout>